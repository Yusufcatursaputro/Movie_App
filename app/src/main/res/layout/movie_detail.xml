<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MovieDetailActivity">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/body"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentTop="true"
        android:paddingHorizontal="30dp"
        android:paddingTop="70dp"
        android:background="@drawable/body">

        <ImageView
            android:id="@+id/image_movie"
            android:layout_width="150dp"
            android:layout_height="200dp"
            android:src="@drawable/movie_1"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"/>
        <LinearLayout
            android:layout_width="150dp"
            android:layout_height="150dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintLeft_toRightOf="@id/image_movie"
            android:layout_marginLeft="20dp"
            android:orientation="vertical">
            <TextView
                android:id="@+id/title_movie"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toBottomOf="@id/image_movie"
                app:layout_constraintStart_toStartOf="parent"
                android:text="Venom : The Last Dance"
                android:textColor="@color/black"
                android:fontFamily="@font/poppins_bold"/>
            <TextView
                android:id="@+id/genre_movie"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Action"
                android:fontFamily="@font/poppins"/>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <TextView
                    android:id="@+id/time_movie"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="1h 49m"
                    android:fontFamily="@font/poppins"
                    android:textColor="@color/black"
                    android:paddingHorizontal="10dp"
                    android:background="@drawable/card_time"
                    app:layout_constraintTop_toBottomOf="@id/title_movie"
                    app:layout_constraintStart_toStartOf="parent"
                    android:layout_marginTop="7dp"/>
                <TextView
                    android:id="@+id/rating_movie"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="R13+"
                    android:fontFamily="@font/poppins"
                    android:textColor="@color/black"
                    android:paddingHorizontal="10dp"
                    android:background="@drawable/card_time"
                    app:layout_constraintTop_toBottomOf="@id/title_movie"
                    app:layout_constraintLeft_toRightOf="@id/time_movie"
                    android:layout_marginLeft="15dp"
                    android:layout_marginTop="7dp"/>
            </LinearLayout>
        </LinearLayout>

        <TextView
            android:id="@+id/synopsis"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Synopsis"
            android:fontFamily="@font/poppins_bold"
            android:textColor="@color/black"
            app:layout_constraintTop_toBottomOf="@id/image_movie"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginTop="30dp"
            android:layout_marginLeft="10dp"/>
        <View
            android:id="@+id/line"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/black"
            app:layout_constraintTop_toBottomOf="@+id/synopsis"
            android:layout_marginTop="5dp"/>
        <TextView
            android:id="@+id/synopsis_movie"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/line"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginTop="10dp"
            android:text="@string/synopsis_movie_1"
            android:fontFamily="@font/poppins"/>
    </androidx.constraintlayout.widget.ConstraintLayout>

    <LinearLayout
        android:id="@+id/navbar"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:orientation="horizontal"
        android:layout_alignParentTop="true"
        android:padding="10dp"
        android:background="@drawable/navbar">
        <ImageView
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginLeft="10dp"
            android:src="@drawable/baseline_keyboard_backspace_24"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:fontFamily="@font/poppins_bold"
            android:layout_marginLeft="10dp"
            android:paddingHorizontal="100dp"
            android:paddingVertical="4dp"
            android:text="MOVIE DETAIL" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/bottom_navbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_alignParentBottom="true"
        android:background="@drawable/bottom_navbar_detail"
        android:paddingVertical="15dp"
        android:paddingHorizontal="30dp"
        android:layout_margin="30dp"
        android:elevation="3dp">
        <ImageView
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:src="@drawable/note_1"
            android:layout_marginLeft="50dp"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="BOOK FILM NOW"
            android:fontFamily="@font/poppins_medium"
            android:textSize="20dp"
            android:textColor="@color/black"
            android:paddingHorizontal="10dp"/>
    </LinearLayout>

</RelativeLayout>